{
  "name": "dnd-5e-srd-api",
  "version": "0.0.0",
  "engines": {
    "node": "14.x"
  },
  "private": true,
  "scripts": {
    "build:ts": "tsc",
    "build": "npm-run-all clean build:ts copy-assets",
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node tools/copyAssets",
    "start": "npm run build && node dist/src/start.js",
    "lint": "eslint . --ext .js",
    "test": "jest -c jest.config.js",
    "test:unit": "jest -c jest.config.unit.js",
    "test:integration": "jest -c jest.config.integration.js --runInBand --detectOpenHandles --forceExit",
    "test:integration:local": "docker-compose pull && docker-compose build && docker-compose run --use-aliases api npm run test:integration"
  },
  "dependencies": {
    "@bugsnag/js": "^7.16.1",
    "@bugsnag/plugin-express": "^7.16.1",
    "@types/morgan": "^1.9.3",
    "apollo-server-express": "^2.19.2",
    "apollo-server-plugin-response-cache": "^0.7.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.3",
    "debug": "^4.3.1",
    "ejs": "^2.5.5",
    "escape-string-regexp": "^2.0.0",
    "express": "^4.17.1",
    "graphql": "^15.8.0",
    "graphql-compose": "^9.0.7",
    "graphql-compose-mongoose": "^9.7.1",
    "graphql-tools": "^8.2.0",
    "lodash": "^4.17.21",
    "mongoose": "^5.12",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "redis": "^3.0.2",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.21",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.3.1",
    "fs-extra": "^10.0.1",
    "jest": "^26.6.3",
    "mockingoose": "^2.13.2",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "redis-mock": "^0.51.0",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.5",
    "supertest": "^4.0.2",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
