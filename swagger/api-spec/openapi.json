{
  "openapi": "3.0.0",
  "info": {
    "title": "D&D 5e API",
    "description": "REST API for the 5e SRD",
    "contact": {
      "name": "5eBits",
      "url": "https://github.com/5e-bits",
      "email": ""
    },
    "license": {
      "name": "MIT",
