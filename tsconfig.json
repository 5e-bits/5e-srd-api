{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "strict": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "typeRoots": ["node_modules/@types"],  // "typeRoots": [] -> won't work
    "types": ["node"]                      // "types": [] -> won't work
  },
  "include": ["./**/*"]
}
